{
  "urls": "http://*:5000",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    }
  },
  "SystemConfig": {
    "Demo": true, // 是否是演示模式 账号admin 密码0000
    "LoginMultiple": false, // 是否允许一个账户在多处登录
    "AllowCorsSite": "http://localhost:5000", // 允许的其他站点访问Api
    "DBProvider": "MySql", //SqlServer //Oracle//Sqlite//MySql
    "DBConnectionString": "Data Source=192.168.1.3;Port=3306;Initial Catalog=smart_cabinet_neimenggu;Persist Security Info=True;User ID=root;Password=123456;",
    //Data Source = 192.168.1.252;Initial Catalog = WaterCloudNetDb;User ID=sa;Password=admin@12345;MultipleActiveResultSets=true;    
    "DBCommandTimeout": 180, // 数据库超时时间，单位秒
    "BackupPath": "/BackupDataBase/mysqlbackup.sql",
    "CacheProvider": "Memory", // 缓存使用方式 Redis/Memory
    "HandleLogProvider": "Sql", // 操作日志使用方式 Redis/Sql，推荐Sql
    "RedisConnectionString": "127.0.0.1:6379", //docker部署 
    "TokenName": "WC-Token", //api Token名称
    "LoginExpire": 6, //登录缓存过期时间(小时)
    "HomePage": "../Home/Default", //登录主页地址
    "MainDbNumber": "0", //主程序数据库
    "LocalLAN": true, //是否局域网
    "OpenQuartz": true, //定时任务开启
    "SqlMode": "MoreSql", //数据库模式多租户或者多库 单租户 "MoreSql" 多租户"TenantSql"
    "ProjectPrefix": "watercloud", //项目中的前缀
    "ReviseSystem": false, //是否重置密码
    "LoginErrorCount": 4, //登录错误次数
    "IsCluster": false, //集群参数 开启时需要去quartz下载响应数据库
    "NeedClear": false, //是否删除定时调度任务
    "SqlConfig": [
      //{
      //  "DBNumber": "1",
      //  "DBProvider": "SqlServer", //MySql //Oracle
      //  "DBConnectionString": "Data Source = .;Initial Catalog = WaterCloudNetDb;User ID=sa;Password=12345678;MultipleActiveResultSets=true;" //Data Source = 192.168.1.252;Initial Catalog = WaterCloudNetDb;User ID=sa;Password=admin@12345;MultipleActiveResultSets=true;    
      //}
    ],
    "RabbitMq": {
      "Enabled": false,
      "HostName": "localhost",
      "UserName": "root", //默认guest
      "Password": "root", //默认guest
      "Port": 5672,
      "VirtualHost": "/"
    },
    "DocumentSettings": {
      "DocumentTitle": "WaterCloud API",
      "GroupOpenApiInfos": [
        {
          "Group": "Carrier",
          "Title": "Carrier API",
          "Description": "载体接口",
          "Version": "1.0.0"
        },
        {
          "Group": "Login",
          "Title": "Login",
          "Description": "用户登录接口",
          "Version": "1.0.0"
        }
      ]
    }
  },
  "AllowedHosts": "*"
}
