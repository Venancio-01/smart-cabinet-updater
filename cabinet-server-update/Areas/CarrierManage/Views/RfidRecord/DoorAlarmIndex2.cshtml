@{
    ViewBag.Title = "通道门报警记录";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    layui.use(['jquery', 'form', 'table', 'dtree', 'common', 'commonTable', 'optimizeSelectOption'], function () {
        var $ = layui.jquery,
            form = layui.form,
            table = layui.table,
            commonTable = layui.commonTable,
            laydate = layui.laydate,
            laydtree = layui.dtree,
            common = layui.common;
        var options = {
            elem: '#currentTableId',
            id: 'currentTableId',
            url: '/CarrierManage/RfidRecord/DoorAlarmGetGridJson',
            defaultToolbar: [],
            search: false,
            cols: [[
                //此处需修改
                { field: 'doc_name', title: '载体名称', width: 160 },
                { field: 'bindingName', title: '绑定部门', width: 120 },
                { field: 'EquipmentName', title: '设备名称', width: 120 },
                { field: 'CreateTime', title: '报警时间', width: 160 },
                {
                    field: 'isOperation', title: '是否处理', width: 88,
                    templet: function (d) {//，0是未绑定，1是部门，2是人员
                        if (d.isOperation == 0) {
                            return "<span class='layui-btn layui-btn-normal layui-btn-xs'>未处理</span>";
                        } else if (d.isOperation == 1) {
                            return "<span class='layui-btn layui-btn layui-btn-xs'>已处理</span>";
                        } else {
                            return "<span class='layui-btn layui-btn layui-btn-xs'>无记录</span>";
                        }
                    }
                },
            ]]
        };
        commonTable.rendertable(options);


        wcLoading.close();
    });
</script>
<div class="layui-fluid" style="padding:5px">
    <div class="layui-row layui-col-space12">
        <div class="layui-col-md12 layui-col-xs12">
            <div class="layui-card" style="padding: 5px;">
                <table class="layui-hide" id="currentTableId" lay-filter="currentTableFilter"></table>
            </div>
        </div>
    </div>
</div>

